<h1>新規投稿</h1>
<% if @film.errors.any? %>
  <%= @film.errors.count %>件のエラーが発生しました。
  <ul>
    <% @film.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @film, url: '/films', method: :post do |f| %>
  <h4>作品名</h4>
  <%= f.text_field :title %>

  <h4>レビュー</h4>
  <%= f.text_area :impressions %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <%= f.submit '投稿' %>
<% end %>